@model IEnumerable<Floda.Models.SanPham>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/Home.css" rel="stylesheet" />
}

<div class="container-fluid">
    <!--Carouse  silde -->
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://nhahoa.com.vn/wp-content/uploads/2021/04/background-nha-hoa-gui-trao-cam-xuc_optimized.png" style="width: 1900px; height: 635px;" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    @* <h5>First slide label</h5>
                        <p>Some representative placeholder content for the first slide.</p>*@
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://depkhongtuong.vn/uploads/quangcao/slide3-png-20180615141408unFRehgJxx.png" style="width: 1900px; height: 635px;" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    @*   <h5>Second slide label</h5>
                        <p>Some representative placeholder content for the second slide.</p>*@
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://lalahoa.net/files/assets/lalahoa_banner.jpg" style="width: 1900px; height: 635px; " class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    @* <h5>Third slide label</h5>
                        <p>Some representative placeholder content for the third slide.</p>*@
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!--Danh mục hoa -->
    <div class="container-fluid danhmuchoa mb-4">
        <div class="row" style="justify-content: center; background-color: var(--bg2-color);">
            <img src="~/Image/danhmuchoa.png" style="width:50%;" />
        </div>
        <div class="row " style="justify-content: center;">
            <div class="col-sm-3">
                <div class="card">
                    <a href="~/Home/HoaCuoi" style="text-align: center; color: black;">
                        <img src="https://hoayeuthuong.com/hinh-hoa-tuoi/hoa-tinh-yeu/10442_priceless-heart.jpg" style="width: 100%; height:300px;" class="card-img-top" alt="Hoa cưới">
                        <div class="card-body">
                            <p class="card-text">Hoa cưới </p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <a href="~/Home/HoaTotNghiep" style="text-align: center; color: black;">
                        <img src="https://hoayeuthuong.com/hinh-hoa-tuoi/hoa-tinh-yeu/12608_glass-vase.jpg" style="width: 100%; height:300px;" class="card-img-top" alt="Hoa tốt nghiệp">
                        <div class="card-body">
                            <p class="card-text">Hoa tốt nghiệp </p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <a href="~/Home/HoaChucMung" style="text-align: center; color: black;">
                        <img src="https://hoayeuthuong.com/hinh-hoa-tuoi/hoa-tinh-yeu/11695_love-rosie.jpg" style="width: 100%; height:300px;" class="card-img-top" alt="Hoa chúc mừng">
                        <div class="card-body">
                            <p class="card-text">Hoa chúc mừng</p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <a href="~Home/HoaKhaiTruong" style="text-align: center; color: black;">
                        <img src="https://hoayeuthuong.com/hinh-hoa-tuoi/hoa-tinh-yeu/13155_ke-chuc-mung.jpg" style="width: 100%; height:300px;" class="card-img-top" alt="Hoa khai trương">
                        <div class="card-body">
                            <p class="card-text">Hoa khai trương</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>



</div>