@model Floda.Models.KhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="container-fluid namecreate">
        <h2>Thêm khách hàng mới</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group row pb-2">
        <label class="control-label col-sm-3" for="TongTienChi">Tên khách hàng:  </label>
        <div class="col-sm-6">
            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="DiaChi">Địa chỉ:  </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="DienThoai">Số điện thoại: </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="Username">UserName:  </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="Password">PassWord:  </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-6">
                <input type="submit" value="Create" class="btn btn-default cre-btn" />  |
                <button class="btn back-btn">@Html.ActionLink("Back to List", "Index")</button>

            </div>

        </div>

    </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
