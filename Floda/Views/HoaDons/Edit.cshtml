@model Floda.Models.HoaDon

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Chỉnh sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HoaDonID)

        <div class="form-group row pb-1">
            <label class="control-label col-sm-3" for="TenKH">Tên khách hàng :</label>

            <div class="col-sm-6">
                @Html.EditorFor(model => model.KhachHang.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KhachHang.TenKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-1">
            <label class="control-label col-sm-3" for="TongTienChi">Ngày đặt : </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-1">
            <label class="control-label col-sm-3" for="NoiDung">Tổng tiền: </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="form-group row">
            <div class="col-sm-3  mx-3">
                <input type="submit" value="Save" class="btn btn-default cre-btn" />
            </div>
            |
            <button class="btn btn-primary back-btn col-sm-3 mx-3">
                @Html.ActionLink("Back to List", "Index")
            </button>
        </div>



    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
