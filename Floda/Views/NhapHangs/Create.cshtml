@model Floda.Models.NhapHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="container">
    <div class="container-fluid namecreate">
        <h2>Thêm phiếu nhập hàng mới</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="NgayNhap">Ngày nhập <label style="color:slategray;">( yyyy/mm/dd  )</label> :</label> 
            <div class="col-sm-6">
                @Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="TongTienChi">Tổng tiền chi:  </label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.TongTienChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TongTienChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pb-2">
            <label class="control-label col-sm-3" for="NoiDung">Nội dung nhập hàng :</label> 
            <div class="col-sm-6">
                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />  

        <div class="form-group">
            <div class="col-md-offset-2 col-sm-6">
                <input type="submit" value="Create" class="btn btn-default cre-btn" />  |
                <button class="btn back-btn">@Html.ActionLink("Back to List", "Index")</button>

            </div>

        </div>

    </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
