@model Floda.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="container-fluid namecreate">
        <h3>Bạn có chắc chắn muốn xóa hàng này không ?</h3>
        <hr />
        <div class="row">
            <div class="row pb-2">
                <label class="col-sm-3 fw-bold">Loại sản phẩm :</label>
                <div class="col-sm-8">@Html.DisplayFor(model => model.LoaiSanPham.TenLoaiSP)</div>
            </div>
            <br />
            <div class="row pb-2">
                <label class="col-sm-3 fw-bold">Tên sản phẩm :</label>
                <div class="col-sm-8">@Html.DisplayFor(model => model.TenSP)</div>
            </div>
            <br />
            <div class="row pb-2">
                <label class="col-sm-3 fw-bold">Số lượng  :</label>
                <div class="col-sm-8"> @Html.DisplayFor(model => model.SoLuongSP)</div>
            </div>
            <br />
            <div class="row pb-2">
                <label class="col-sm-3 fw-bold"> Giá bán : </label>
                <div class="col-sm-8"> @Html.DisplayFor(model => model.GiaBan)</div>
            </div>
            <br />
            <div class="row pb-2">
                <label class="col-sm-3 fw-bold"> Hình ảnh : </label>
                <div class="col-sm-8"> @Html.DisplayFor(model => model.UrlHinhAnh)</div>

            </div>

            <br />
            <div class="row pb-2">
                <label class="col-sm-3 fw-bold"> Mô tả : </label>
                <div class="col-sm-8"> @Html.DisplayFor(model => model.MoTa)</div>
            </div>

        </div>
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger delete-btn" /> |
                <button class="btn back-btn">@Html.ActionLink("Back to List", "Index")</button>

            </div>
        }

    </div>
</div>